{
  "name": "mmar-metamodeling-client",
  "description": "This is the front end client for metamodeling of the mmar metamodeling tool",
  "version": "0.1.0",
  "author": "Daniel Borcard & Fabian Muff",
  "license": "AGPL-3.0",
  "dependencies": {
    "@aurelia-mdc-web/all": "8.0.3-au2",
    "@aurelia/router": "2.0.0-beta.6",
    "@uppy/core": "4.2.3",
    "@uppy/dashboard": "4.1.2",
    "@uppy/drag-drop": "4.0.4",
    "aurelia": "2.0.0-beta.6",
    "bootstrap": "5.3.3",
    "browser-process": "0.0.1",
    "circular-dependency-plugin": "5.2.2",
    "class-transformer": "0.5.1",
    "jwt-decode": "4.0.0",
    "readable-stream": "4.5.2",
    "string_decoder": "1.3.0",
    "util": "0.12.5",
    "uuid": "11.0.3"
  },
  "devDependencies": {
    "@aurelia/testing": "2.0.0-beta.6",
    "@aurelia/ts-jest": "2.0.0-beta.7",
    "@aurelia/webpack-loader": "2.0.0-beta.6",
    "@eslint/js": "9.8.0",
    "@types/eslint__js": "8.42.3",
    "@types/jest": "29.5.12",
    "@types/node": "18.16.16",
    "@typescript-eslint/eslint-plugin": "5.59.9",
    "@typescript-eslint/parser": "5.59.9",
    "autoprefixer": "10.4.19",
    "buffer": "6.0.3",
    "crypto-browserify": "3.12.0",
    "css-loader": "7.1.2",
    "dotenv-webpack": "8.1.0",
    "duplicate-package-checker-webpack-plugin": "3.0.0",
    "eslint": "8.57.0",
    "html-webpack-plugin": "5.5.1",
    "htmlhint": "1.1.4",
    "jest": "29.5.0",
    "jest-environment-jsdom": "29.5.0",
    "jest-transform-stub": "2.0.0",
    "postcss": "8.4.40",
    "postcss-loader": "7.3.2",
    "process": "0.11.10",
    "rimraf": "6.0.1",
    "sass": "1.63.2",
    "sass-loader": "12.6.0",
    "stream-browserify": "3.0.0",
    "style-loader": "4.0.0",
    "ts-loader": "9.4.3",
    "tslib": "2.6.2",
    "typescript": "4.9.5",
    "webpack": "5.97.1",
    "webpack-bundle-analyzer": "4.10.2",
    "webpack-cli": "4.10.0",
    "webpack-dev-server": "4.15.0"
  },
  "scripts": {
    "lint:js": "eslint src test --ext .js,.ts",
    "lint:html": "htmlhint -c .htmlhintrc src",
    "lint": "npm run lint:js && npm run lint:html && npm run lint:css",
    "pretest": "npm run lint",
    "start": "webpack serve --mode development",
    "start:prod": "webpack serve --mode production",
    "build": "rimraf dist && webpack --env production",
    "analyze": "rimraf dist && webpack --env production --analyze",
    "test": "jest"
  },
  "jest": {
    "testMatch": [
      "<rootDir>/test/**/*.spec.ts"
    ],
    "testEnvironment": "jsdom",
    "transform": {
      "\\.(css|less|sass|scss|styl|jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "jest-transform-stub",
      "\\.(ts|html)$": "@aurelia/ts-jest"
    },
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts"
    ],
    "globals": {
      "ts-jest": {
        "isolatedModules": true
      }
    }
  },
  "resolutions": {
    "glob-parent": "6.0.2",
    "readable-stream": "3.6.2",
    "safe-buffer": "5.1.2"
  },
  "web-types": [
    "./node_modules/mdui/web-types.en.json"
  ]
}